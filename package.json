{
  "name": "base",
  "private": true,
  "author": "Yauheni Shcharbakou <iipekolict@gmail.com>",
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=\"admin.*\"",
    "dev:admin.main": "turbo run dev --filter=admin.main",
    "dev:backend": "turbo run dev --filter=\"backend.*\"",
    "dev:backend.api-gateway": "turbo run dev --filter=backend.api-gateway",
    "dev:backend.main": "turbo run dev --filter=backend.main",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=\"admin.*\" --env-mode loose",
    "build:admin.main": "turbo run build --filter=admin.main --env-mode loose",
    "build:backend": "turbo run build --filter=\"backend.*\" --env-mode loose",
    "build:backend.api-gateway": "turbo run build --filter=backend.api-gateway --env-mode loose",
    "build:backend.main": "turbo run build --filter=backend.main --env-mode loose",
    "build:grpc": "turbo run build --filter=@packages/grpc*",
    "prod": "turbo run prod",
    "prod:admin": "turbo run prod --filter=\"admin.*\" --env-mode loose",
    "prod:admin.main": "turbo run prod --filter=admin.main --env-mode loose",
    "prod:backend": "turbo run prod --filter=\"backend.*\" --env-mode loose",
    "prod:backend.api-gateway": "turbo run prod --filter=backend.api-gateway --env-mode loose",
    "prod:backend.main": "turbo run prod --filter=backend.main --env-mode loose",
    "format": "turbo run format",
    "gen:package": "turbo gen package && yarn",
    "reset": "turbo run reset && rm -rf .turbo node_modules yarn.lock",
    "reset:admin": "turbo run reset --filter=\"admin.*\"",
    "reset:backend": "turbo run reset --filter=\"backend.*\"",
    "docker:local": "docker compose -f docker-compose.yml --profile local up --build",
    "docker": "docker compose -f docker-compose.yml --profile all up --build"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "moment": "2.30.1"
  },
  "devDependencies": {
    "@turbo/gen": "2.7.0",
    "@types/lodash": "4.14.202",
    "@types/node": "22.19.3",
    "change-case-all": "2.1.0",
    "minimatch": "10.1.1",
    "prettier": "3.7.4",
    "tsup": "8.5.1",
    "turbo": "2.7.0",
    "typescript": "latest",
    "yarn": "1.22.22"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "admin/apps/*",
    "admin/packages/*",
    "backend/apps/*",
    "backend/packages/*",
    "frontend/apps/*",
    "frontend/packages/*",
    "packages/*",
    "packages/**/*"
  ]
}
