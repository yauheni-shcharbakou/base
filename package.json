{
  "name": "base",
  "private": true,
  "author": "Yauheni Shcharbakou <iipekolict@gmail.com>",
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "yarn compile:grpc",
    "dev": "yarn compile:grpc && turbo run dev",
    "dev:backend": "yarn compile:grpc && turbo run dev --filter=\"backend.*\"",
    "dev:backend.api-gateway": "yarn compile:grpc && turbo run dev --filter=backend.api-gateway",
    "dev:backend.auth": "yarn compile:grpc && turbo run dev --filter=backend.auth",
    "dev:backend.main": "yarn compile:grpc && turbo run dev --filter=backend.main",
    "dev:frontend": "yarn compile:grpc && turbo run dev --filter=\"frontend.*\"",
    "dev:frontend.admin": "yarn compile:grpc && turbo run dev --filter=frontend.admin",
    "build": "yarn compile:grpc && turbo run build",
    "build:backend": "turbo run build --filter=\"backend.*\" --env-mode loose",
    "build:backend.api-gateway": "turbo run build --filter=backend.api-gateway --env-mode loose",
    "build:backend.auth": "turbo run build --filter=backend.auth --env-mode loose",
    "build:backend.main": "turbo run build --filter=backend.main --env-mode loose",
    "build:frontend": "turbo run build --filter=\"frontend.*\"",
    "build:frontend.admin": "turbo run build --filter=frontend.admin",
    "build:grpc": "yarn compile:grpc && turbo run build --filter=\"@*/grpc\" --env-mode loose",
    "compile:grpc": "turbo run compile --filter=@packages/grpc --env-mode loose",
    "prod": "turbo run prod",
    "prod:backend": "turbo run prod --filter=\"backend.*\" --env-mode loose",
    "prod:backend.api-gateway": "turbo run prod --filter=backend.api-gateway --env-mode loose",
    "prod:backend.auth": "turbo run prod --filter=backend.auth --env-mode loose",
    "prod:backend.main": "turbo run prod --filter=backend.main --env-mode loose",
    "prod:frontend": "turbo run prod --filter=\"frontend.*\" --env-mode loose",
    "prod:frontend.admin": "turbo run prod --filter=frontend.admin --env-mode loose",
    "format": "turbo run format",
    "gen:package": "turbo gen package && yarn",
    "reset": "turbo run reset && rm -rf .turbo node_modules yarn.lock",
    "reset:backend": "turbo run reset --filter=\"backend.*\"",
    "reset:frontend": "turbo run reset --filter=\"frontend.*\"",
    "docker:local": "docker compose -f docker-compose.yml --profile local up --build",
    "docker": "docker compose -f docker-compose.yml --profile all up --build"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "moment": "2.30.1",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@turbo/gen": "2.8.1",
    "@types/lodash": "4.14.202",
    "@types/node": "22.19.3",
    "change-case-all": "2.1.0",
    "minimatch": "10.1.1",
    "prettier": "3.7.4",
    "tsup": "8.5.1",
    "turbo": "2.8.1",
    "typescript": "latest",
    "yarn": "1.22.22"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "backend/apps/*",
    "backend/packages/*",
    "frontend/apps/*",
    "frontend/packages/*",
    "packages/*"
  ]
}
