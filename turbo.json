{
  "$schema": "https://turbo.build/schema.json",
  "concurrency": "100",
  "envMode": "loose",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "prod": {},
    "format": {},
    "reset": {},
    "compile": {
      "cache": false
    }
  }
}
